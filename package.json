{
  "name": "bee-monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "admin:server:dev": "npx nx run-many -t dev -p server admin --nxBail --output-style=stream",
    "admin:dev": "npx nx dev admin",
    "server:dev": "npx nx dev server",
    "watch:pkg": "lerna watch -- lerna run build --since",
    "watch:build": "npx nx watch --projects=@yio/config -- nx run \\$NX_PROJECT_NAME:build",
    "graph": "npx nx graph",
    "prepare": "husky",
    "prettier": "npx prettier --check '**/*.{tsx,ts}'",
    "prettier:write": "npx prettier --write '**/*.{tsx,ts}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "^pnpm@8.0.0",
  "workspaces": [
    "app/*",
    "packages/**"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "nx": "^18.0.5",
    "prettier": "^3.2.5"
  }
}
